            <li class="nav-item"><%= link_to "ログアウト", destroy_customer_session_path, method: :delete, class: "btn font-bold mr-3", style: "background-color: #e2eda8; color: #48120E;"%></li>
          <% elsif admin_signed_in? %>
            <li class="nav-item"><%= link_to "商品一覧", admin_items_path, class: "btn font-bold mr-3", style: "background-color: #a4d5bd; color: #48120E;"%></li>
            <li class="nav-item"><%= link_to "会員一覧", admin_customers_path, class: "btn font-bold mr-3", style: "background-color: #a4d5bd; color: #48120E;"%></li>
