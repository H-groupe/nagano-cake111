<div class="container" style= "color: #48120E;">
  <div class="row ">
    <div class="mx-auto form-group rounded">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <h1>管理者ログイン</h1>
      <div class="box-email">
        <%= f.label "メールアドレス" %><br>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
      <div class="box-password">
        <div class="a-row">
          <div class="column-left">
            <%= f.label "パスワード" %><br>
            <%= f.password_field :password, autocomplete: "current-password" %>
          </div>
        </div>
      </div>
      <%= f.submit "ログイン", class:"btn font-bold", style: "background-color: #ffe9a9; color: #48120E;"%>
      <% end %>
    </div>
  </div>
</div>