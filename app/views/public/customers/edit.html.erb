<h1>会員情報編集</h1>

<%= form_with model: @customer, url: customers_update_path, method: :patch do |f| %>

  <h4>氏名</h4>
  <%= f.text_field :family_name %><%= f.text_field :first_name %>

  <h4>フリガナ</h4>
  <%= f.text_field :family_name_kana %><%= f.text_field :first_name_kana %>

  <h4>郵便番号</h4>
  <%= f.text_field :postal_code %>

  <h4>住所</h4>
  <%= f.text_field :addresse %>

  <h4>電話番号</h4>
  <%= f.text_field :telephone_number %>

  <h4>メールアドレス</h4>
  <%= f.text_field :email %>

  <%= f.submit '編集内容を保存' %>
  <%= link_to "退会する", check_customers_path %>

<% end %>