<div class="container">
  <div class="form-row">
    <div class="col-9 form-group">
      <h1>ショッピングカート</h1>
    </div>
    <div class="col-3 form-group">
      <%= link_to "カート内を空にする", all_destroy_cart_items_path,method: :delete, class:"btn btn-danger" %>
    </div>
  </div>
    <table class="table table-striped">
      <div class="row">
          <tr>
            <th></th>
            <th>商品名</th>
            <th>単価(税込み)</th>
            <th>数量</th>
            <th>小計</th>
            <th></th>
          </tr>
        <% total = 0 %>
        <% if @cart_items.present? %>
          <% @cart_items.each do |cart_item| %>
          <tr>
            <td>
              <%= image_tag cart_item.item.get_item_image(50,50) %>
            </td>
            <td>
              <%=cart_item.item.name %>
            </td>
            <td><%= (cart_item.item.price_excluding_tax * 1.10).to_i %></td>
            <td>
              <%= form_with model: cart_item, url: cart_item_path(cart_item),local: true,method: :patch do |f| %>
                <%= f.number_field :quantity, min:1, max:10, id: "quantity_cart" %>
                <%= f.submit "変更", class:"btn btn-success" %>
              <% end %>
            </td>
            <td>
              <% subtotal = ((cart_item.item.price_excluding_tax*cart_item.quantity)*1.10).to_i %>
              <%= subtotal %>
            </td>
            <td>
              <%= link_to "削除する",cart_item_path(cart_item.id,cart_item),method: :delete, class:"btn btn-danger" %>
            </td>
          </tr>
            <% total += subtotal %>
          <% end %>
        <% end %>
      </div>
    </table>
    <div class="row">
      <div class="col-3 mt-5">
        <%= link_to "買い物を続ける", items_path, class:"btn btn-primary" %>
      </div>
      <div class="col-5"></div>
      <div class="col-4">
        <table class="table table-striped">
          <tr>
            <th>合計金額</th>
            <td><%= total %></td>
          </tr>
        </table>
      </div>
    </div>
      <div class="row m-5">
        <div class="col-9"></div>
        <div class="col-3">
          <%= link_to "情報入力に進む", new_order_path, class:"btn btn-success" %>
        </div>
      </div>
</div>