<div class="container">
  <div class="row">
    <div class="col-12 ml-5 mb-5">
      <h3>会員情報編集</h3>
    </div>
  </div>

  <%= form_with model: @customer, url: customers_update_path, method: :patch do |f| %>
    <div><%= flash[:notice] %></div>
    <%= render "public/shared/error_messages", resource: @customer %>
    
    <div class="form-row">
      <div class="col-3 form-group">
        <p class="mt-2">氏名</p>
      </div>
      <div class="col-3 form-group">
        <%= f.text_field :family_name %>
      </div>
      <div class="col-3 form-group">
        <%= f.text_field :first_name %>
      </div>
        <%= display_errors(@customer, :family_name, :first_name) %>
    </div>
      
    <div class="form-row">
      <div class="col-3 form-group">
        <p class="mt-2">フリガナ</p>
      </div>
      <div class="col-3 form-group">
        <%= f.text_field :family_name_kana %>
      </div>
      <div class="col-3 form-group">
        <%= f.text_field :first_name_kana %>
      </div>
        <%= display_errors(@customer, :family_name_kana, :first_name_kana) %>
    </div>

    <div class="form-row">
      <div class="col-3 form-group">
        <p class="mt-2">郵便番号</p>
      </div>
      <div class="col-3 form-group">
        <%= f.text_field :postal_code %>
      </div>
        <%= display_errors(@customer, :postal_code) %>
    </div>

    <div class="form-row">
      <div class="col-3 form-group">
        <p class="mt-2">住所</p>
      </div>
      <div class="col-3 form-group">
        <%= f.text_field :address %>
      </div>
      <div class="col-3 form-group">
        <%= display_errors(@customer, :address) %>
      </div>
    </div>

    <div class="form-row">
      <div class="col-3 form-group">
        <p class="mt-2">電話番号</p>
      </div>
      <div class="col-3 form-group">
        <%= f.text_field :telephone_number %>
      </div>
      <div class="col-3 form-group">
        <%= display_errors(@customer, :telephone_number) %>
      </div>
    </div>

    <div class="form-row">
      <div class="col-3 form-group">
        <p class="mt-2">メールアドレス</p>
      </div>
      <div class="col-3 form-group">
        <%= f.text_field :email %>
      </div>
      <div class="col-3 form-group">
        <%= display_errors(@customer, :email) %>
      </div>
    </div>
  </div>
    <div class="form-row justify-content-center pb-2">
      <!--<div class="col-6 form-group mt-5 ml-5 mb-5">-->
        <span class="text-center pr-4"><%= f.submit '編集内容を保存',class:"btn btn-light", style: "background-color: #ffe9a9; color: #664e3d;" %></span>
      <!--</div>-->
      <!--<div class="col-6 form-group ml-5 mb-5">-->
        <span class="text-center"><%= link_to "退会する", customers_check_path,class:"btn btn-light", style: "background-color: #f5b1aa; color: #664e3d;" %></span>
      <!--</div>-->
    </div>

  <% end %>


