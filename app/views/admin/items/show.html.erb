<div class = "container">
  <h4>商品詳細</h4>
  <div class = "row">
    <div class = col-4>
      <%= image_tag @item.get_item_image(300,300) %>
    </div>
    <div class = col-8 >
             
                <div class = "row">
                  <div class = col-3>
                    商品名
                  </div>
                  <div class = col-lg-9>
                    <%= @item.name %>
                  </div>
                </div>  
                <div class = "row">
                  <div class = col-3>
                    商品説明
                  </div>
                  <div class = col-9>
                    <%= @item.introduction %>
                  </div>
                </div>  
                <div class = "row">
                  <div class = col-3>
                    ジャンル
                  </div>
                  <div class = col-9>
                    <%= @item.genre.name %>
                  </div>
                </div>  
                <div class = "row">
                  <div class = col-3>
                      税込価格<br>
                      （税抜価格）
                  </div>
                  <div class = col-9>
                    <%= (@item.price_excluding_tax * 1.10 ).round %>
                    (<%= @item.price_excluding_tax %>)円
                  </div>
                </div>  
                <div class = "row">
                  <div class = col-3>
                    販売ステータス
                  </div>
                  <div class = col-9>
                  <%= @item.is_sales_status ? '販売中' : '販売中止中'  %>
                  </div>
                </div>  
                <div class = "text-center" >
                  <%= link_to '編集する', edit_admin_item_path(@item), class: "btn btn-sm btn-success" %>
                </div>
      

    </div>
  </div>
</div>
