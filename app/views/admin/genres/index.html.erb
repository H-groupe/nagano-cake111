 <div class="col-4 mx-auto form-group rounded" >
    <table class="table table-borderless mb-0" >
      <h3>ジャンル一覧・追加</h3>
      <tr>
        <td>
          <%= form_with model: @genre, url: admin_genres_path do |f| %>
            <div class="d-flex mt-3">
              <%= f.text_field :name, placeholder: "新規ジャンル名", class: "form-control me-3" %>
              <%= f.submit "作成", class:"btn font-bold", style: "background-color: #E5E5CB; color: #1A120B;" %>
            </div>
          <% end %>
           <div class="d-flex mt-3">
           </div>
            <% @genres.each do |genre| %>
              <tr>
                <td>ジャンル</td>
                <td><%= genre.name %></td>
                <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class:"btn font-bold", style: "background-color: #E5E5CB; color: #1A120B;" %></td>
              </tr>
            <%end%>
        </td>
      </tr>
    </table>
  </div>