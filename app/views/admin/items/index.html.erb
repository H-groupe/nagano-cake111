
<div class = "container">
  <div class = "row">
    <div class = col-12>
      <h2>商品一覧</h2>
      <table class = "table table-hover table-inverse" >
        <thead>
         <tr>
           <th>商品ID</th>
           <th>商品名</th>
           <th>税抜価格</th>
           <th>ジャンル</th>
           <th>ステータス</th>
         </tr>
        </thead>
        <tbody>
          <% @items.each do |item| %>
          <tr>
           <td><%= item.id %></td>
           <td><%= link_to admin_item_path(item.id) do %><%= item.name %><% end %></td>
           <td><%= item.price_excluding_tax %></td>
           <td><%= item.genre.name %></td>
           <td><%= item.is_sales_status ? '販売中' : '販売中止中'  %></td>
          </tr>
          <% end %>
          <%#= paginate @items %>
        </tbody>
      </table>

    </div>
  </div>
</div>





