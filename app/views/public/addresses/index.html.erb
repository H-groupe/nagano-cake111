<div class="container">
  <div class="row">
    <div class="col-4">
      <h4 class="my-3 address-title text-center">
        配送先登録/一覧
        <i class="fa-solid fa-truck" style="color: #48120E;"></i>
      </h4>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <%= form_with model: @address, url: addresses_path, method: :post do |f| %>
      <table class="table table-borderless", style="color: #48120E;">
        <tr>
          <td>郵便番号(ハイフンなし)</td>
          <td><%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %></td>
        </tr>

        <tr>
          <td>住所</td>
          <td><%= f.text_field :address, autofocus: true, autocomplete: "address" %></td>
        </tr>

        <tr>
          <td>宛名</td>
          <td><%= f.text_field :name, autofocus: true, autocomplete: "name" %></td>
        </tr>
    </div>

      <tr>
      <td>
        <%= f.submit "新規登録" %>
      </td>
      </tr>
      <% end %>
      </table>

      <table class="table table-hover table-inverse", style="color: #48120E;">
        <thead>
          <tr>
            <th>郵便番号</th>
            <th>住所</th>
            <th>宛名</th>
            <th colspan="4"></th>
          </tr>
        </thead>
        <% @addresses.each do |address| %>
        <tbody>
          <tr>
            <td><%= address.postal_code %> </td>
            <td><%= address.address %></td>
            <td><%= address.name %></td>
            <td><%= link_to "編集する",edit_address_path(address.id),class:"btn font-bold", style: "background-color: #ffe9a9; color: #1A120B;" %></td>
            <td><%= link_to "削除する",address_path(address.id),method: :delete,class:"btn btn-light", style: "background-color: #f5b1aa; color: #664e3d;" %></td>
          </tr>
        </tbody>
        <% end %>
      </table>
  </div>
</div>