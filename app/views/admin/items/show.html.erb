

<div class = "container">
  <div class = "row">

      <table class = "table" >
        <thead>
          <tr>
            <th>商品詳細</th>
          </tr>
        </thead>
        <tbody>
         <tr>
          <div class = "row">
            <div class = col-4>
             <%#= image_tag @item.item_image(100,100) %>
            </div>

            <div class = col-8>
             
                <div class = "row">
                  <div class = col-4>
                    <td>商品名</td>
                  </div>
                  <div class = col-8>
                    <td><%= @item.name %></td>
                  </div>
                </div>  
                <div class = "row">
                  <div class = col-4>
                    <td>商品説明</td>
                  </div>
                  <div class = col-8>
                    <td><%= @item.introduction %></td>
                  </div>
                </div>  
                <div class = "row">
                  <div class = col-4>
                    <td>ジャンル</td>
                  </div>
                  <div class = col-8>
                    <td><%= @item.genre.name %></td>
                  </div>
                </div>  
                <div class = "row">
                  <div class = col-4>
                    <td>
                      税込価格<br>
                      （税抜価格）
                    </td>
                  </div>
                  <div class = col-8>
                    <td><%= @item.price_excluding_tax %>円</td>
                  </div>
                </div>  
                <div class = "row">
                  <div class = col-4>
                    <td>販売ステータス</td>
                  </div>
                  <div class = col-8>
                    <td><%= @item.is_sales_status %></td>
                  </div>
                </div>  
            <td><%= link_to '編集する', edit_admin_item_path(@item), class: "btn btn-sm btn-success" %></td>
            </tr>
          </div>
        </tbody>
      </table>

    </div>
  </div>
</div>
