<div class="item-index-box">

    <!-- ジャンル選択のサイドバー -->
    <%= render "searches/genre", genres: @genres %>
    <!-- ジャンル選択のサイドバー -->
    <div class="item-index">
      <h3>商品一覧1</h3>
        <table>
          <tbody>
            <tr class="item-box">
              <% @genre.item.each do |item| %>
                <td class="item">
                    <%= link_to item_path(item) do %>
                      <%= image_tag item.get_item_image(200,150) %>
                      <%= item.name %><
                      ￥<%= item.price_excluding_tax %>
                    <% end %>
                </td>
              <% end %>
            </tr>
          </tbody>
        </table>
    </div>
</div>