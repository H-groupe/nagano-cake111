<div class="container">
  <div class="row justify-content-center">
    <h1>検索結果</h1>
  </div>
  <div class="row justify-content-center my-3">
    <!-- 検索結果が何件見つかったか表示する -->
    <p><%= "検索結果: #{@items.total_count} 件" %></p>
  </div>
  <div class="item d-flex row">
    <% @items.each do |item| %>
      <div class="col-6 d-flex justify-content-center">
        <%= link_to item_path(item) do %>
          <%= image_tag item.get_item_image(400, 200) %>
          <p><%= item.name %></p>
          <span>
            <%= number_to_currency(item.price_excluding_tax, unit: "円", strip_insignificant_zeros: true) %>
          </span>
        <% end %>
      </div>
    <% end %>
  </div>
  <div class="row justify-content-center m-5">
    <% if @items.empty? %>
      <p>該当する商品は見つかりませんでした。</p>
    <% end %>
  </div>
  <div class="row justify-content-center mt-5">
    <%= paginate @items %>
  </div>
</div>