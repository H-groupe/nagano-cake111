<div class="container">
  <div class="row">
    <div class="col-12">
      <div style=" color: white; background: #cbe6be; padding: 10px; border: 2px dashed rgba(255 , 255 , 255 , 0.5);
                      -moz-border-radius: 6px; -moz-box-shadow: 0 0 0 5px #cbe6be , 0 2px 3px 5px rgba(0 , 0 , 0 , 0.5);
                      -webkit-border-radius: 6px; -webkit-box-shadow: 0 0 0 5px #cbe6be , 0 2px 3px 5px rgba(0 , 0 , 0 , 0.5);
                      border-radius: 6px; box-shadow: 0 0 0 5px #cbe6be , 0 2px 3px 5px rgba(0 , 0 , 0 , 0.5); ">
        <h2 class="text-center", style="color: #48120E">
          <i class="fa-solid fa-clover" style="color: #54917f;"></i>
            <%= @customer.full_name %>さんの会員情報編集
          <i class="fa-solid fa-clover" style="color: #54917f;"></i>
        </h2>
      </div>
    </div>
  </div>
  <div class="row pt-5">
    <%= form_with model: [:admin, @customer], url: admin_customer_path(@customer.id), method: :patch do |f| %>
      <div class="row pb-3" >
        <div class="col-4 pr-5 mr-5">
          会員ID
        </div>
        <div class="col-6 pl-5 ml-5">
          <%= @customer.id %>
        </div>
      </div>
       <div class="row pb-3" >
        <div class="col-4 pr-5 mr-5">
          氏名
        </div>
        <div class="col-6 pl-5 ml-5">
          <%= f.text_field :family_name %> <%= f.text_field :first_name %>
        </div>
      </div>
      <div class="row pb-3" >
        <div class="col-4 pr-5 mr-5">
          フリガナ
        </div>
        <div class="col-6 pl-5 ml-5">
          <%= f.text_field :family_name_kana %> <%= f.text_field :first_name_kana %>
        </div>
      </div>
      <div class="row pb-3" >
        <div class="col-4 pr-5 mr-5">
          郵便番号
        </div>
        <div class="col-6 pl-5 ml-5">
          <%= f.text_field :postal_code %>
        </div>
      </div>
      <div class="row pb-3" >
        <div class="col-4 pr-5 mr-5">
          住所
        </div>
        <div class="col-6 pl-5 ml-5">
          <%= f.text_field :address %>
        </div>
      </div>
      <div class="row pb-3" >
        <div class="col-4 pr-5 mr-5">
          電話番号
        </div>
        <div class="col-6 pl-5 ml-5">
          <%= f.text_field :telephone_number %>
        </div>
      </div>
      <div class="row pb-3" >
        <div class="col-4 pr-5 mr-5">
          メールアドレス
        </div>
        <div class="col-6 pl-5 ml-5">
          <%= f.text_field :email %>
        </div>
      </div>
      <div class="row pb-3" >
        <div class="col-4 pr-5 mr-5">
          会員ステータス
        </div>
        <div class="col-6 pl-5 ml-5">
          <%= f.radio_button :is_membership_status, false %>
              <%= f.label :is_membership_status, "退会" %>

              <%= f.radio_button :is_membership_status, true %>
              <%= f.label :is_membership_status, "有効" %>
        </div>
      </div>
        <div class="row justify-content-md-center">
           <div class = "col-md-4">
              <div style="border: 2px solid #bee6d8; padding: 2px; border-radius: 5px; text-align: center;">
                <div style="background-color: #bee6d8; border-radius: 5px;">
                  <%= f.submit "変更を保存", class:"btn btn-lg" %>
                </div>
              </div>
            </div>
        </div>
      <% end %>
  </div>
</div>