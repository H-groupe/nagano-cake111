<h4>ショッピングカート</h4>
<table>
  <tr>
    <th>商品名</th>
    <th>単価(税込み)</th>
    <th>数量</th>
    <th>小計</th>
    <th></th>
  </tr>
  <% total = 0 %>
  <%= link_to "カート内を空にする", all_destroy_cart_items_path,method: :delete %>
  <% if @cart_items.present? %>
    <% @cart_items.each do |cart_item| %>
    <tr>
      <td>
        <%= image_tag cart_item.item.get_item_image(50,50) %>
      </td>
      <td>
        <%=cart_item.item.name %>
      </td>
      <td><%= (cart_item.item.price_excluding_tax * 1.10).to_i %></td>
      <td>
        <%= form_with model: cart_item, url: cart_item_path(cart_item),local: true,method: :patch do |f| %>
          <%= f.number_field :quantity, min:1, max:10, id: "quantity_cart" %>
          <%= f.submit "変更" %>
        <% end %>
      </td>
      <td>
        <% subtotal = ((cart_item.item.price_excluding_tax*cart_item.quantity)*1.10).to_i %>
        <%= subtotal %>
      </td>
      <td>
        <%= link_to "削除する",cart_item_path(cart_item.id,cart_item),method: :delete %>
      </td>
    </tr>
      <% total += subtotal %>
    <% end %>
  <% end %>
  <tr>
    <th>合計金額</th>
    <td><%= total %></td>
  </tr>
  <%= link_to "買い物を続ける", items_path %>
  <%= link_to "情報入力に進む", new_order_path %>
</table>