<div class = "container">
  <h4>商品詳細</h4>
    <div class = "row">
      <div class = "col-4 ml-lg-6">
        <%= image_tag @item.get_item_image(300,300) %>
      </div>
      <div class = col-7 >
        <div class = "row my-lg-1">
          <div class = col-3>
            商品名
          </div>
          <div class = "col-lg-9">
            <h5><%= @item.name %></h5>
          </div>
        </div>  
        <div class = "row my-lg-4">
          <div class = col-3>
            商品説明
          </div>
          <div class = col-9>
            <h5><%= @item.introduction %></h5>
          </div>
        </div>  
        <div class = "row my-lg-4">
          <div class = col-3>
            ジャンル
          </div>
          <div class = "col-9 fs-4">
            <%= @item.genre.name %>
          </div>
        </div>  
        <div class = "row my-lg-4">
          <div class = col-3>
              税込価格 </br>
             （税抜価格）
          </div>
          <div class = col-9>
            <h5><%= (@item.price_excluding_tax * 1.10 ).round %>
            (<%= @item.price_excluding_tax %>)円</h5>
          </div>
        </div>  
        <div class = "row my-lg-4">
          <div class = col-3>
            販売ステータス
          </div>
          <div class = "col-9 text-success">
           <%= @item.is_sales_status ? '販売中' : '販売中止中'  %>
          </div>
        </div>  
      </div>
    </div>
</div>
<div class = "container">
  <div class = "row my-lg-2 justify-content-md-center" >
    <div class = "col-md-2">
      <%= link_to '編集する', edit_admin_item_path(@item), class: "btn btn-lg btn-success" %>
    </div>
  </div>
</div>