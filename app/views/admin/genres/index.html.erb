<div class="container">
  <div class = "row mt-5">
    <h2>ジャンル一覧・追加</h2>
  </div>
    <!-- ジャンル用form_forで記載する時削除 -->
 
      <%= form_with model: @genre, url: admin_genres_path do |f| %>
        <div class="row mx-auto p-3">
          <div class = "col-2 ">
            <lavel>ジャンル名</lavel>
          </div>
          <div class = "col-3">
          <%= f.text_field :name %>
          </div>
          <div class = "co-3">
          <%= f.submit "新規登録", class: "btn btn-primary" %>
        </div>
    </div>
    <% end %>
  
    <!-- ジャンル一覧 -->
    <table class = "table table-hover">
      <thead>
        <tr class="active">
          <th>ジャンル</th>
        </tr>
      </thead>
      <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class:"btn font-bold", style: "background-color: #ffe9a9; color: #1A120B;" %></td>
            </tr>
          <% end %>
      </tr>
    </table>
  </div>
</div>