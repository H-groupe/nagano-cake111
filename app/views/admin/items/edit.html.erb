<div class = "container">
  <div class = ""><!--rowをつけるとレイアウトがおかしくなる-->
    <div class = "col-12">
      <div style=" color: white; background: #cbe6be; padding: 7px; border: 2px dashed rgba(255 , 255 , 255 , 0.5);
                    -moz-border-radius: 6px; -moz-box-shadow: 0 0 0 5px #cbe6be , 0 2px 3px 5px rgba(0 , 0 , 0 , 0.5);
                    -webkit-border-radius: 6px; -webkit-box-shadow: 0 0 0 5px #cbe6be , 0 2px 3px 5px rgba(0 , 0 , 0 , 0.5);
                    border-radius: 6px; box-shadow: 0 0 0 5px #cbe6be , 0 2px 3px 5px rgba(0 , 0 , 0 , 0.5); ">
        <h2 class="text-center", style="color: #48120E">
          <i class="fa-solid fa-cookie-bite" style="color: #b37039;"></i>
            商品編集
          <i class="fa-solid fa-cookie-bite" style="color: #b37039;"></i>
        </h2>
      </div>
    </div>
    <div class = "row justify-content-center pt-5">
      <div class = "col-md-6">
        <div>
          <%= form_with model: @item, url: admin_item_path(@item.id), local:true do |f| %>
            <div class="row my-lg-2">
              <div class="col-3">
                <%= f.label "商品画像" %>
              </div>
              <div class="col-7">
              <%= f.file_field :item_image, class: "form-control-file item_image", accept: 'image/*' %>
              </div>
            </div>
            <div class="row my-lg-2">
              <div class="col-3">
                <%= f.label :"商品名" %>
              </div>
              <div class="col-7">
                <%= f.text_field :name, class: 'form-control item_name' %>
              </div>
            </div>
            <div class="row my-lg-2 ">
              <div class="col-3">
                 <%= f.label :"商品説明" %>
              </div>
              <div class="col-7">
                 <%= f.text_area :introduction, class: 'form-control item_introduction',:size=>"40x8"  %>
             </div>
            </div>
            <div class="row my-lg-2">
              <div class="col-3">
                <%= f.label :"ジャンル" %>
              </div>
              <div class="col-7">
                <%= f.select :genre_id, options_for_select(@genres.map { |genre| [genre.name, genre.id] }),
                { include_blank: "-- 選択してください --" }, {required: true, class: +"form-control", id: "genre-select" } %>
              </div>
            </div>
            <div class="row my-lg-2">
              <div class="col-3">
                <%= f.label :"税抜価格" %>
              </div>
              <div class="col-8 d-flex ">
                <%= f.text_field :price_excluding_tax, class: 'form-control item_price'%><%= f.label :"円" %>
              </div>
            </div>
            <div class="row my-lg-2">
              <div class="col-4">
                <%= f.label :"販売ステータス" %>
              </div>
              <div class="col-2">
                <%= f.radio_button :is_sales_status, true %>販売中
              </div>
              <div class="col-3">
                <%= f.radio_button :is_sales_status, false  %>販売停止中
              </div>
            </div>
            <div class="row my-lg-2 justify-content-md-center ">
              <div class="col-4">
                <div style="border: 2px solid #bee6d8; padding: 2px; border-radius: 5px; text-align: center;">
                  <div style="background-color: #bee6d8; border-radius: 5px;">
                    <%= f.submit "変更保存", class: 'btn btn-lg' %>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
