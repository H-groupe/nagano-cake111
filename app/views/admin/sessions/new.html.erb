<div class="container">
  <div class="form-row">
    <div class="col-5 form-group">
      <h1>管理者ログイン</h1>
    </div>
  </div>
  <%#= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <%= form_with(model: resource, local: true, url: session_path(resource_name)) do |f| %>
    <div class="form-row">
      <div class="col-3 form-group mt-5 ml-5">
        <%= f.label "メールアドレス" %>
      </div>
      <div class="col-5 form-group mt-5 ml-5">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>
    </div>
    <div class="form-row">
      <div class="col-3 form-group mt-5 ml-5">
        <%= f.label "パスワード" %>
      </div>
      <div class="col-5 form-group mt-5 ml-5">
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
      </div>
    </div>
      <div class="form-row justify-content-center">
        <div class="col-3 form-group mt-5">
          <div style="border: 2px solid #bee6df; padding: 2px; border-radius: 5px; text-align: center;">
            <div style="background-color: #bee6df; border-radius: 5px;">
              <%= f.submit "ログイン",class:"btn form-control"%>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
  <%= render "admin/shared/links" %>
</div>