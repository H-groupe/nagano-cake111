          <% else %>
            <li class="nav-item"><%= link_to "About", about_path, class: "btn font-bold mr-3", style: "background-color: #e2eda8; color: #48120E;"%></li>
            <li class="nav-item"><%= link_to "商品一覧", items_path, class: "btn font-bold mr-3", style: "background-color: #e2eda8; color: #48120E;"%></li>
