
<h3>注文履歴一覧</h3>

<div class="container">
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>購入日時</th>
        <th>購入者</th>
        <th>注文個数</th>
        <th>注文ステータス</th>
      </tr>
    </thead>
    <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.created_at.strftime("%Y/%m/%d %H:%M") %></td>
        <td><%= order.customer.first_name %><%#= order.customer.first_name %></td>
        <td><%= order.order_details.sum(:quantity) %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>