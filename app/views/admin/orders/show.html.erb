<div>
  <%= flash[:notice] %>
</div>

<h2>注文履歴詳細</h2>

<div class="container">
  <div class = "row">
                  <div class = col-3>
                    購入者
                  </div>
                  <div class = col-lg-9>
                   <%#= link_to admin_order_path do %><%= @order.name %><%# end %>
                  </div>
                </div>  
                <div class = "row">
                  <div class = col-3>
                    注文日
                  </div>
                  <div class = "col-9 scoreStatus_list_label registration_date">
                    <%= @order.created_at.strftime('%Y/%m/%d') %>
                  </div>
                </div>  
                <div class = "row">
                  <div class = col-3>
                    配送先
                  </div>
                  <div class = col-9>
                    <%= @order.address %>
                  </div>
                </div>  
                <div class = "row">
                  <div class = col-3>
                    支払方法
                  </div>
                  <div class = col-9>
                    <%= @order.payment_method %>
                  </div>
                </div>  
                <div class = "row">
                  <%= form_with model: @order, local:true do |f| %>
                    <div class = col-3>
                      <%= f.label "注文ステータス" %>
                    </div>
                    <div class = col-9>
                      <%= f.select :order_id, options_for_select(@genres.map { |genre| [genre.name, genre.id] }),
                        { include_blank: "-- 選択してください --" }, {required: true, class: +"form-control", id: "genre-select" } %>
                    </div>
                  <% end %>
                </div>  
  
  
  
  
  
  
  
  
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>商品名</th>
        <th>単価（税込）</th>
        <th>数量</th>
        <th>小計</th>
        <th>製作ステータス</th>
      </tr>
    </thead>
    <tbody>
  <% @orders.each do |order| %>
    <tr>
      <td><%= order.cart_items.item.name %></td>
      <td><%= order.cart_items.item.(price_excluding_tax*1.10)round %></td>
      <td><%= order.cart_items.item.quantity %></td>
      <td><%= order.cart_items.(price_excluding_tax*1.10)round %></td>
      <td>
        <%= form_with model: order, url: admin_order_path(order), method: :patch do |f| %>
        <%= f.select :order_status, Order.order_statuses, class: "form-control" %>
        <!--%= f.submit "更新", class: "btn btn-primary" %>-->
        <% end %>
      </td>
    </tr>
  <% end %>
 </tbody>
</table>
