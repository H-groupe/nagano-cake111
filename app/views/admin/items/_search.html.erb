<%= form_with url: admin_search_path, local: true, method: :get,class: "form-inline" do |f| %>
  <div class="form-group mr-2 mt-1">
    <%= f.text_field :word, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.hidden_field :range, value: "item" %>
    <%= f.hidden_field :range, value: "customer" %>
  </div>
  <div class="form-group mt-1">
    <%#= f.submit "検索", class: "btn btn-primary form-control" %>
     <%= f.button class: "btn-sm", type: :submit do %>
      　<i class="fas fa-search" style="font-size: 16px;"></i>
    　<% end %>
  </div>
<% end %>

